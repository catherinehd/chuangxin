@import "../../../assets/css/variable.styl"

.contraction-search-index
  padding 40px 0 228px !important
  .index-detail
    padding 0 30px !important

//搜索结果展示
.search-result-box
  padding 30px 0 128px !important
  .contraction-result-detail
    .tags
      border-bottom 1px solid rgba(168, 168, 168, 0.48)
      padding 0 30px 20px 30px
      display flex
      .tags-title
        font-size $font-little-big-size
        line-height 1
      .tags-list
        span
          font-size $font-little-big-size
          color $font-gray-color
          margin 0 17px
          line-height 1
        .active
          color $theme-main-yellow-color
    .contraction-result-detail-info
      padding 30px 30px 0
      p
        font-size $font-nomal-size
        color $font-gray-color
        line-height 1.57
        margin-bottom 34px
        &:last-child
          margin-bottom 0

//没有搜索结果
.no-result
  text-align center
  padding-bottom 100px !important
  img
    width 264px
    height 310px
  .explain
    font-size $font-bigger-size
    color $font-light-gray-color
    line-height 1
    margin-top 30px
    text-align center
