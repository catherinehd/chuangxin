      margin 30px 30px 40px
      color $font-gray-color
      line-height 1.57
      clear both
    .case
      padding 30px
      clear both
      border-top 1px solid #e7e7e7
      .case-title
        font-size $font-big-size
        color $theme-main-light-blue-color
        line-height 1
        padding 0 30px 9px
        border-bottom $default-gray-bottom-border
      .case-info
        padding 60px 30px 0
        .case-name
          font-size $font-biggest-size
          line-height 1
          margin-bottom 20px
        hr
          height 2px
          width 50px
          border 1px solid $theme-main-light-blue-color
        .case-box
          display flex
          justify-content space-between
          padding-top 28px
          .left-word
