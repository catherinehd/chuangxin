@import "../../../assets/css/variable.styl"

.reverse-box
  padding-top 12px !important
  padding-bottom 20px !important
  position relative
.reverse-theory-box
  border-top 1px solid #e7e7e7
  width 100%
  height 1000px
  overflow-y scroll
  .reverse-theory-list
    width 100%
    tr
      td
        font-size $font-nomal-size
        padding 20px 10px 16px
        text-align left
        border-bottom $default-gray-bottom-border
      .number
        width 76px
        text-align center
      .positive
        width 118px
      .weight
        width 194px
        color $theme-main-yellow-color
      .nagative
        width 120px
      .size
        color $font-red-color
      &:nth-child(1)
        td
          padding-top 34px
