@import "../../../assets/css/variable.styl"

.pop-wrap
  width 100%
  height 100%
  position fixed
  left 0
  top 0
  background rgba(163, 169, 170, 0.3)
  .pop-box
    width 480px
    height 380px
    background #ffffff
    position absolute
    top 50%
    left 50%
    margin-top -190px
    margin-left -240px
    .pop-title
      color $theme-main-light-blue-color
      font-size $font-big-size
      text-align center
      padding 30px 0 20px
      line-height 1
      border-bottom $default-border
      position relative
      span
        position absolute
        right 12px
        top 12px
        svg
          cursor pointer
          width 19px
          height @width
          stroke #a3a9aa
    .pop-detail
      padding 30px 50px 9px
      .login-box
        .form-field
          .title
            display inline-block
            width 70px
            font-size $font-little-big-size
          span
            position relative
            input
              padding-left 8px
              width 300px
              height 30px
              font-size $font-nomal-size
            [type=checkbox]
              width 14px
              height 14px
              margin 0
              margin-right 10px
            .pwd-icon
              width 14px
              height 11px
              position absolute
              top 4px
              right 10px
              cursor pointer
            .icon-active
              fill $theme-main-light-blue-color
            .issafari
              right 25px
          &:nth-child(1)
            padding-bottom 20px
          .forgetpwd
            float right
            color $theme-main-light-blue-color
            font-size $font-nomal-size
        .remmember-forget-box
          padding 20px 0 30px
          line-height 1
        .warn
          color $font-red-color
          font-size $font-nomal-size
          line-height 17px
          svg
            width 17px
            height @width
            stroke none
            fill $font-red-color
            vertical-align top
            margin-right 8px
        .login-btn
          padding 37px 0 28px
          width 100%
          text-align center
          button
            background $theme-main-light-blue-color
            color #fff
            font-size $font-little-big-size
            width 120px
            height 32px
            border-radius 3px
            &[disabled]
              background #9e9e9e
              color #fff
        .tip
          width 100%
          color $font-light-gray-color
          text-align center
          a
            color $theme-main-light-blue-color


