@import "../../../assets/css/variable.styl"

section
  width 100%
  .header
    padding 6px 0 1px
    margin 0 auto
    width 1000px
    display flex
    justify-content space-between
    font-size $font-little-big-size
    .logo
      margin-right 40px
      img
        width 228px
        height 88px
    .top-nav
      width 606px
      text-align left
      .nav-box
        display flex
        li
          margin 0 20px
          position relative
          a
            display inline-block
            padding 57px 23px 10px
            cursor pointer
          .active
            color $theme-main-yellow-color
            border-bottom $default-main-bottom-border
          .lower-level-menu
            width 140px
            position absolute
            border-radius 3px
            background #ffffff
            color $font-gray-color
            div
              cursor pointer
              padding 12px 0 12px 15px
            .level2active
              color $theme-main-yellow-color
            .triggle
              margin-left 10px
              display block
              height 10px
              text-align left
    .func-btns
      text-align right
      ul
        display flex
        li
          color $theme-main-light-blue-color
          margin-top 57px
          margin-bottom 10px
          cursor pointer
          &:nth-child(1)
            padding 0 18px 0 0
            border-right 1px solid #bdbdbd
          &:nth-child(2)
            padding 0 0 0 18px



:focus
  outline none
