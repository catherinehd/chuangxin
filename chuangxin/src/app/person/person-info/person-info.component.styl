@import "../../../assets/css/variable.styl"

.detail-info
  .user-title
    padding 34px 0 16px 30px
    border-bottom $default-gray-bottom-border
    color $theme-main-light-blue-color
    font-size $font-big-size
    line-height 1
  .user-info
    padding 30px 30px 50px
    .info-field
      margin-bottom 13px
      height 30px
      .blank-name
        font-size $font-little-big-size
        line-height 1.38
        margin-right 10px
        width 80px
        display inline-block
      span:nth-child(2)
        color $font-gray-color
        font-size $font-little-big-size
        line-height 1.38
        input:not(.sex)
          width 290px
          height 30px
          padding-left 9px
          font-size $font-nomal-size
          color $font-gray-color
          border 1px solid #f1f2f0
        select
          width 196px
          height 30px
          padding-left 9px
          font-size $font-nomal-size
          color $font-gray-color
          background transparent
          border solid 1px rgba(189, 189, 189, 0.7)
      .warn
        color $font-red-color
        font-size $font-nomal-size
        line-height 30px
        margin-left 14px
        i
          font-size 17px
          color $font-red-color
          display inline-block
          margin-right 8px
          vertical-align middle
      &:last-child
        margin-bottom 0
    .sex
      input
        margin-right 12px
      label:nth-child(1)
        margin-right 36px
  .submit-button
    padding-left 30px
    button
      color $font-white-color
      background $theme-main-light-blue-color
      font-size $font-little-big-size
      width 120px
      height 32px
      text-align center
      border-radius 3px
      &[disabled]
        background #9e9e9e !important
        color #fff !important
