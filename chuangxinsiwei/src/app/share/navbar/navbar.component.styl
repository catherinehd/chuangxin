@import "../../../assets/css/variable.styl"

nav
  width 100%
  height 100px
  padding 6px 0
  margin-bottom -100px
  position relative
  .nav-box
    width 1200px
    margin 0 auto
    display flex
    justify-content space-around
    ul
      display flex
      justify-content space-around
      li
        flex-grow 1
        text-align center
        line-height 18px
        cursor pointer
        position relative
        color $font-deep-gray-color
        &:hover
          color $font-main-deep-yellow-color
        .toggle
          position absolute
          padding-top 10px
          top 45px
          left 0
          width 240px
          z-index 999
          background transparent
          .triggle
            margin-left 20px
            display block
            height 13px
            text-align left
          ul
            display block
            border-radius 3px
            padding 10px 0
            background $font-main-deep-blue-color
            box-shadow 0 0.5px 3px 0 rgba(120, 129, 160, 0.5)
            li
              color #fff
              padding 18px 0 18px 24px
              text-align left
              background $font-main-deep-blue-color
              &:hover
                border 0
                padding-top 18px
                color #fff
                background #00427d
        span
          line-height 87px
      .active
        color $font-main-deep-yellow-color
    .loginRegister-btn
      li
        color $font-main-deep-yellow-color
        span
          padding 0 18px
          border-right 1px solid #dbdbdb

    ul:nth-child(1)
      li:not(:first-child)
        span
          padding 0 43px
          border-right 1px solid #bdbdbd

