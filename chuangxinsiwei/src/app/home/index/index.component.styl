@import "../../../assets/css/variable.styl"

main
  width 100%
  .top-img
    width 100%
  .description
    padding-top 3.5rem
    width 940px
    margin 0 auto
    text-align center
    .title
      color $font-main-deep-yellow-color
      span
        padding-bottom 3rem
        border-bottom 1px solid $theme-main-light-blue-color
    .des-detail
      padding-top 4rem
      font-size $font-nomal-size
      line-height 1.57
      text-align left
      color $font-gray-color
  .search-menu
    width 100%
    text-align center
    margin-top 3.7rem
    padding 2rem
    background $theme-main-gray-color
    ul
      width 940px
      margin 0 auto
      display flex
      justify-content space-around
      li
        font-size $font-nomal-size
        color $font-light-gray-color
